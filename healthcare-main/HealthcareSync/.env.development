# Development Server Configuration
WDS_SOCKET_HOST=0.0.0.0
WDS_SOCKET_PORT=0
DANGEROUSLY_DISABLE_HOST_CHECK=true

# Application Core Configuration
REACT_APP_APP_NAME=HealthcareSync
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=10000

# Development Specific Settings
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_MOCK_API=false

# Authentication Configuration
REACT_APP_TOKEN_STORAGE_KEY=hc_sync_dev_token
REACT_APP_REFRESH_TOKEN_STORAGE_KEY=hc_sync_dev_refresh_token

# Security Configurations
REACT_APP_ENABLE_MFA=false
REACT_APP_PASSWORD_COMPLEXITY_ENABLED=false

# Feature Flags
REACT_APP_ENABLE_SOCIAL_LOGIN=false
REACT_APP_ENABLE_HIPAA_CONSENT=true

# Logging and Monitoring
REACT_APP_ERROR_LOGGING_ENABLED=true
REACT_APP_LOG_LEVEL=debug
